@page
@model RVPark.Pages.Admin.Sites.UpsertModel

<form method="post" asp-action="Upsert">
	<div class="container">
		<div class="row px-2 mx-2 backgroundWhite border">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
				<h2 class="text-primary">@(Model.SiteObj.Name)</h2>
			</div>
			<div class="col-8 pt-3 px-3">
				<div class="form-group row py-3">
					<div class="col-3">
						<label asp-for="SiteObj.Name" class="control-label"></label>
					</div>
					<div class="col-9">
						<input class="form-control" asp-for="SiteObj.Name" />
						<span class="text-danger" asp-validation-for="SiteObj.Name"></span>
					</div>

					@if (Model.SiteObj != null && Model.SiteObj.Id != 0)
					{
						<input type="hidden" asp-for="SiteObj.Id" />
					}
				</div>
				<div class="form-group row py-3">
					<div class="col-3">
						<label asp-for="SiteObj.MaxLength" class="control-label"></label>
					</div>
					<div class="col-9">
						<input class="form-control" asp-for="SiteObj.MaxLength" />
						<span class="text-danger" asp-validation-for="SiteObj.MaxLength"></span>
					</div>
				</div>
				<div class="form-group row py-3">
					<div class="col-3">
						<label asp-for="SiteObj.Description" class="control-label"></label>
					</div>
					<div class="col-9">
						<input class="form-control" asp-for="SiteObj.Description" />
						<span class="text-danger" asp-validation-for="SiteObj.Description"></span>
					</div>
				</div>
				<div class="form-group row py-3">
					<div class="col-3">
						<label asp-for="SiteObj.SiteTypeId" class="control-label"></label>
					</div>
					<div class="col-9">
						<!--<select asp-for="SiteObj.SiteTypeId" asp-items="Model.SiteTypeList" class="form-control"></select>-->
						@Html.DropDownListFor(m => m.SiteObj.SiteTypeId,
															Model.SiteTypeList,
															" - Please select a type - ",
															new { @class = "form-control", @id = "SiteId" })
						<span class="text-danger" asp-validation-for="SiteObj.SiteTypeId"></span>
					</div>
				</div>
				@foreach (var imageUrl in Model.SiteObj.ImageUrls)
				{
					<img src="@imageUrl" alt="Site Image" class="img-thumbnail" />
				}

				<div class="form-group row py-3">
					<div class="row">
						<div class="col-9 offset-3">
							<div class="row">
								<div class="col-6">
									<a asp-page="./Upsert" class="btn btn-primary form-control">Edit</a>
								</div>
								<div class="col-6">
									<a asp-page="./Index" class="btn btn-success form-control">Cancel</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
