@page
@{
    ViewData["Title"] = "Roles";
}
<div class="border backgroundWhite container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Role List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Upsert" asp-route-id="0"  class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New</a>
        </div>
    </div>
    <br /><br />
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    Role Name
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
        </thead>
       
    </table>
</div>
@section Scripts {
    <script>
        function alertFunc() {
            var success = $("#success").html()
            var message = $("#message").html();
            console.log(success);
            console.log(message);
            if (success == "True") {
                toastr.success(message);
            };

        }
        window.onload = alertFunc();
    </script>
}