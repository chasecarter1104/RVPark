@page
@model RVPark.Pages.Admin.Roles.IndexModel
@{
}
<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Role List</h2>
        </div>
        <div class="col-6 text-end">
            <!-- Create New Button -->
            <a asp-page="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Role</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.RolesObj)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.Description</td> 
                    <td>
                        <a class="btn btn-outline-success" asp-page="Upsert" asp-route-id="@role.Id">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        function alertFunc() {
            var success = $("#success").html()
            var message = $("#message").html();
            console.log(success);
            console.log(message);
            if (success == "True") {
                toastr.success(message);
            };

        }
        window.onload = alertFunc();
    </script>
}