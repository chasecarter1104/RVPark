@page
@model RVPark.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "Roles";
}

<div class="border backgroundWhite container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Role List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New
            </a>
        </div>
    </div>

    @if (Model.Success)
    {
        <div class="alert alert-success mt-3">
            @Model.Message
        </div>
    }

    <table class="table table-striped table-bordered mt-4">
        <thead>
            <tr>
                <th>Role Name</th>
                <th>Description</th>
                <th>Locked</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.Description</td>
                   
                    <td>
                        <a asp-page="Upsert" asp-route-id="@role.Id" class="btn btn-sm btn-warning me-2">Edit</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
