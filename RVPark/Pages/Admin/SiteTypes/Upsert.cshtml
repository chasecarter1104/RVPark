@page
@model RVPark.Pages.Admin.SiteTypes.UpsertModel
<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <h2 class="text-primary">@(Model.SiteTypeObj.Id != 0 ? "Update" : "Create") Site Type</h2>
            </div>
            <div class="col-8 pt-3">
				@if (Model.SiteTypeObj.Id != 0)
				{
					<input type="hidden" asp-for="SiteTypeObj.Id" />
				}
				<div class="form-group row p-1">
                    <div class="col-3">
                        <label asp-for="SiteTypeObj.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="SiteTypeObj.Name" />
                        <span asp-validation-for="SiteTypeObj.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row p-1">
                    <div class="col-3">
		                <label asp-for="SiteTypeObj.Price"></label>
	                </div>
	                <div class="col-9">
		                <input class="form-control" asp-for="SiteTypeObj.Price" />
		                <span asp-validation-for="SiteTypeObj.Price" class="text-danger"></span>
	                </div>
                </div>
                <div class="form-group row p-1">
                    <div class="col-3">
		                <label asp-for="SiteTypeObj.StartDate"></label>
	                </div>
	                <div class="col-9">
                        <input type="date" class="form-control" asp-for="SiteTypeObj.StartDate" value="@DateTime.Today.ToString("MM/dd/yyyy")" />
		                <span asp-validation-for="SiteTypeObj.StartDate" class="text-danger"></span>
	                </div>
                </div>
                <div class="form-group row p-1">
                    <div class="col-3">
                        <label asp-for="SiteTypeObj.EndDate"></label>
                    </div>
                    <div class="col-9">
                        <input type="date" class="form-control" asp-for="SiteTypeObj.EndDate" />
                        <span asp-validation-for="SiteTypeObj.EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row p-1">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">@(Model.SiteTypeObj.Id != 0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
