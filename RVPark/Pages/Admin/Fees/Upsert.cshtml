@page
@model RVPark.Pages.Admin.Fees.UpsertModel

<form method="post" asp-action="Upsert">
	<div class="container">
		<div class="row px-2 mx-2 backgroundWhite border">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
				<h2 class="text-primary">@(Model.FeeObj != null && Model.FeeObj.Id != 0 ? "Update" : "Create") Site</h2>
			</div>
			<div class="col-8 pt-3 px-3">
				<div class="form-group row py-3">
					<div class="col-3">
						<label asp-for="FeeObj.Name" class="control-label"></label>
					</div>
					<div class="col-9">
						<input class="form-control" asp-for="FeeObj.Name" />
						<span class="text-danger" asp-validation-for="FeeObj.Name"></span>
					</div>

					@if (Model.FeeObj != null && Model.FeeObj.Id != 0)
					{
						<input type="hidden" asp-for="FeeObj.Id" />
					}
				</div>
				<div class="form-group row py-3">
					<div class="col-3">
						<label asp-for="FeeObj.FeeAmount" class="control-label">Fee Amount</label>
					</div>
					<div class="col-9">
						<input class="form-control" asp-for="FeeObj.FeeAmount" />
						<span class="text-danger" asp-validation-for="FeeObj.FeeAmount"></span>
					</div>
				</div>
				
				<div class="form-group row py-3">
					<div class="row">
						<div class="col-9 offset-3">
							<div class="row">
								<div class="col-6">
									<button type="submit" class="btn btn-primary form-control">@(Model.FeeObj != null && Model.FeeObj.Id != 0 ? "Update" : "Create")</button>
								</div>
								<div class="col-6">
									<a asp-page="./Index" class="btn btn-success form-control">Cancel</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
